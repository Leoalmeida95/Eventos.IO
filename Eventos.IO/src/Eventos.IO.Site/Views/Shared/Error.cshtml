@model ErrorViewModel
@{
    ViewData["Title"] = "Ocorreu um erro!";
}

<h1 class="text-danger">@ViewData["Title"].</h1>
<h2 class="text-danger">Ocorreu um erro, tente novamente ou entre em contato com um administrador.</h2>

@if (Model.ShowRequestId)
{
    <p>
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
    </p>
}

@{
    if(ViewData["MensagemErro"] != null)
    {
        <br />
        <h2 class="text-danger">@ViewData["MensagemErro"]</h2>
    }
}